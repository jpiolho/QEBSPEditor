@using CurrieTechnologies.Razor.SweetAlert2
@using QEBSPEditor.Core
@using QEBSPEditor.Core.EntParsing
@using QEBSPEditor.Models.BSPFiles
@inject ApplicationSettingsService ApplicationSettingsService
@inject IJSRuntime JSRuntime

<CascadingValue Value="BSP">
    <RadzenTabs class="h-100" RenderMode="TabRenderMode.Server">
        <Tabs>
            <RadzenTabsItem Text="Entities" Disabled="!BSP.Capabilities.HasFlag(BSPCapabilities.Entities)">
                <BSPEditorTabEntities BSP="(BSP as IBSPFileEntities)" />
            </RadzenTabsItem>

            @if (ApplicationSettingsService.Settings.ExperimentalMode)
            {
                <RadzenTabsItem Text="Lighting" Disabled="!BSP.Capabilities.HasFlag(BSPCapabilities.Lighting)">
                    <BSPEditorTabLighting BSP="BSP as IBSPFileLighting" />
                </RadzenTabsItem>
            }
        </Tabs>
    </RadzenTabs>
</CascadingValue>



@code {
    [Parameter] public IBSPFile BSP { get; set; } = null!;
}