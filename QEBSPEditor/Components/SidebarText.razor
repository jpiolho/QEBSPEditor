@if (Text is null)
{
    <RadzenText TextAlign="TextAlign.Center" TextStyle="TextStyle.Body1" Style="color: var(--rz-panel-menu-color)"><b>@Title</b></RadzenText>
}
else
{
    <RadzenText class="pl-2" Style="color:var(--rz-panel-menu-color)" TextStyle="TextStyle.Body1">
        @if (Title is not null)
        {
            <b>@Title: </b>
        }

        @Text
    </RadzenText>
}

@code {
    [Parameter] public string? Title { get; set; }
    [Parameter] public string? Text { get; set; }
}